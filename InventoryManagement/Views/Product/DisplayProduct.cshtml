@model IEnumerable<InventoryManagement.Models.Product>

@{
    ViewData["Title"] = "DisplayProduct";
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h1>Products</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="AddProduct" class="btn btn-primary">Add Product</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    <div class="w-50 btn-group" role="group">

                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-1">Edit</a>
                                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                </td>
            </tr>
        }
    </tbody>
</table>

