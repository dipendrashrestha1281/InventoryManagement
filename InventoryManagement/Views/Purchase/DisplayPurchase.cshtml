@model IEnumerable<InventoryManagement.Models.Purchase>

@{
    ViewData["Title"] = "DisplayPurchase";
}

<div class="container p-3">
    <div class="row">
        <div class="col-6">
            <h1>Purchase History</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="PurchaseProduct" class="btn btn-primary">Purchase Product</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPurchased.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPurchased.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                 <div class="w-50 btn-group" role="group">

                                <a asp-action="Edit" asp-route-id="@item.PurchaseId" class="btn btn-primary mx-1">Edit</a>
                                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                                <a asp-action="Delete" asp-route-id="@item.PurchaseId" class="btn btn-danger mx-1">Delete</a>
                            </div>
            </td>
        </tr>
}
    </tbody>
</table>
